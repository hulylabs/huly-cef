{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "tests/**/*",
    "dist",
    "node_modules"
  ]
}